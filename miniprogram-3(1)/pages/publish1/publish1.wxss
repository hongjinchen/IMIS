/* "前往活动发布界面"按钮设计 */
.activity_button{
  margin-left:30rpx;
  margin-top:30rpx;
  background-color: #88ADE7;
  font-size: 28rpx !important;
  color:white;
}

/* 文本框输入设计 */
.wenbenkuang {
  position: relative;
  margin: 30rpx;
  height: 650rpx;
  background-color: white;
  padding: 20px 20px 20px 20px; 
  font-size: 28rpx;
  box-shadow: 1px 2px 3px 2px #A3A3A3;
  border-radius: 16px;
}

page {
  font-size: 11pt;
}
/* 按钮总体 */
.tupian {
  position: relative;
  width: 100%;
  margin-left: 40rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}
.ui_uploader_item{
  float: left;
  position: relative;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 165rpx;
  height: 165rpx;
}
.ui_uploader {
  float: left;
  position: relative;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  width: 165rpx;
  height: 165rpx;
  border: 2rpx solid #d9d9d9;
  box-sizing: border-box;
}

.ui_uploader:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.ui_uploader:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.shanchu{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #fff;
  border-radius: 50%;
}
.ui_uploader_item image {
  width: 100%;
  height: 100%;
}
/* 字数限制 */
.limit{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.limit2{
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}